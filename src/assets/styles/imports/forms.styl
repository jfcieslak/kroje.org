fieldset
	border: none
	padding: 0

input,
label,
select
	display: block

+all-text-inputs()
	color: $form_text_color
	background-color: white
	border-radius: $form_border_radius
	border: 1px solid $form_border_color
	border-radius: 3px
	box-shadow: $form_box_shadow
	font-family: $form_font_family
	font-size: 1em
	font-weight: $form_font_weight
	margin-bottom: $base_line_height/2
	padding: $base_line_height/3 $base_line_height/3
	width: 100%
	height: 2em
	&.hollow
		border: 0
		box-shadow: none

	&:hover
		border-color: $form_border_color_hover


	&:focus
		border-color: $form_border_color_focus
		box-shadow: $form_box_shadow_focus
		outline: none

	&:disabled
		opacity: 0.9
		background-color: rgba(black, .1)
		border: none
		box-shadow: none


textarea
	resize: vertical
	min-height: 8em

input[type="submit"]
	visibility: hidden
	display: none

input[type="checkbox"],
input[type="radio"]
	display: inline

input[type="file"]

select
	width: auto
	max-width: 100%
	margin-bottom: $base-line-height
